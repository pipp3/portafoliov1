<section id="contact" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-12 text-primary">Contáctame</h2>
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h3 class="text-2xl font-semibold mb-4 text-textH2">Conectemos</h3>
        <p class="text-gray-600 mb-6">
          Siempre estoy abierto a nuevas oportunidades y colaboraciones. No dudes en ponerte en contacto conmigo.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(link => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 hover:text-primary transition-colors"
              set:html={link.icon}
            />
          ))}
        </div>
      </div>
      <form id="contact-form" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Nombre</label>
          <input
            type="text"
            id="name"
            name="name"
            class="mt-1 px-4 py-2 block w-full rounded-md border border-gray-400 bg-gray-50 shadow-sm focus:border-primary focus:ring-primary"
            required
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="mt-1 px-4 py-2 block w-full rounded-md border border-gray-400 bg-gray-50 shadow-sm focus:border-primary focus:ring-primary"
            required
          />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Mensaje</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            class="mt-1 px-4 py-2 block w-full rounded-md border border-gray-400 bg-gray-50 shadow-sm focus:border-primary focus:ring-primary"
            required
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-primary text-white px-6 py-3 rounded-lg hover:bg-secondary transition-colors font-medium"
        >
          Enviar Mensaje
        </button>
      </form>
    </div>
  </div>
</section>

<script>
  import emailjs from '@emailjs/browser';
  import Swal from 'sweetalert2';

  // Inicializar EmailJS con tu Public Key
  emailjs.init(import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY);

  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

  if (form && submitButton) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const originalText = submitButton.textContent;
      submitButton.textContent = 'Enviando...';
      submitButton.disabled = true;

      // Mostrar alerta de carga
      Swal.fire({
        title: 'Enviando mensaje...',
        text: 'Por favor, espera un momento',
        allowOutsideClick: false,
        allowEscapeKey: false,
        showConfirmButton: false,
        didOpen: () => {
          Swal.showLoading();
        }
      });

      emailjs.sendForm(
        import.meta.env.PUBLIC_EMAILJS_SERVICE_ID,
        import.meta.env.PUBLIC_EMAILJS_TEMPLATE_ID,
        form,
        import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY
      )
      .then(function() {
        // Mostrar alerta de éxito
        Swal.fire({
          icon: 'success',
          title: '¡Mensaje enviado!',
          text: 'Gracias por contactarme. Me pondré en contacto contigo pronto.',
          confirmButtonColor: '#4F46E5',
          confirmButtonText: 'Aceptar'
        });
        form.reset();
      }, function(error) {
        // Mostrar alerta de error
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'No se pudo enviar el mensaje. Por favor, intenta nuevamente.',
          confirmButtonColor: '#4F46E5',
          confirmButtonText: 'Aceptar'
        });
        console.error('Error:', error);
      })
      .finally(function() {
        submitButton.textContent = originalText;
        submitButton.disabled = false;
      });
    });
  }
</script>