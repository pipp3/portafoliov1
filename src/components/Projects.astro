---
import "slick-carousel/slick/slick.css";
import "slick-carousel/slick/slick-theme.css";
import Carousel from "./Carousel";


---

<section id="projects" class="py-20 bg-white dark:bg-dark-bg transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center mb-4 text-primary tracking-tight">Proyectos Destacados</h2>
    <p class="text-xl text-gray-600 dark:text-dark-text text-center mb-12 leading-relaxed">Descubre mis trabajos más recientes y destacados</p>
    
    <Carousel client:only="react" />
    
    {/* Grid de proyectos */}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
      {/* El grid se mantendrá vacío ya que los proyectos ahora están en el carrusel */}
    </div>
  </div>
</section>

<style>
  .projects-carousel {
    margin-bottom: 2rem;
  }
  
  .projects-carousel .slick-prev,
  .projects-carousel .slick-next {
    color: #0891b2;
  }
  
  .projects-carousel .slick-dots li button:before {
    color: #0891b2;
  }
  
  .projects-carousel .slick-dots li.slick-active button:before {
    color: #0891b2;
  }
</style>